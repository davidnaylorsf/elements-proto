{% import "element-card-macro.njk" as propertyCard %}
<section class="elements">
  <h2 class="element__heading">Properties of the first four elements.</h2>
 
 filenames = [ Element1, Element2, Element3, Element4 ]

{% set filename = Element1 %}
{% set firstProperty = filename[0] %}
<p class="tagline" >ElementName: {{firstProperty.ElementName}} </p>
  <div class="element-grid">
    {{ propertyCard.card( filename ) }}
  </div>

{% set filename = Element2 %}
{% set firstProperty = filename[1] %}
<p class="tagline" >ElementName: {{firstProperty.ElementName}} </p>
  <div class="element-grid">
    {{ propertyCard.card( filename ) }}
  </div>


</section>